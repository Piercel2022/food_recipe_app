<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-center items-center mt-5 gap-80">
    <h1 class="font-bold text-4xl">Foods</h1>
    <%= link_to 'Add food', new_food_path, class: "rounded-md py-2 px-3 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="foods" class="min-w-full">
    <%= render @foods %>
  </div>
</div>
