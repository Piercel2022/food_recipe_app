<div class="flex w-full mx-auto md:w-2/3">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="inline-block px-3 py-2 mb-5 font-medium text-green-500 rounded-lg bg-green-50" id="notice"><%= notice %></p>
    <% end %>

    <%= render @food %>
    <div class="text-xl">
      <%= link_to 'Edit', edit_food_path(@food), class: "mx-6  mt-2 rounded-lg py-3 px-5 bg-gray-200 font-medium" %>
      <%= button_to 'Destroy', food_path(@food), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 font-medium" %>
    </div>
    <%= link_to 'Back to foods', foods_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
