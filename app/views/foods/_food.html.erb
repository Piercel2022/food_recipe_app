<div id="<%= dom_id food %>">
  <div class="flex flex-col">
      <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
          <table class="mx-auto text-center border border-black min-w-max">
            <thead class=" bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-4 text-sm font-semibold text-gray-900 border-r border-black">
                  Food
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-semibold text-gray-900 border-r border-black">
                  Measuring_unit
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-semibold text-gray-900 border-r border-black">
                  Quantity
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-semibold text-gray-900 border-r border-black">
                  Unit price
                </th>
                <th scope="col" class="px-6 py-4 text-sm font-semibold text-gray-900">
                  Action
                </th>
              </tr>
            </thead>
            <tbody>
              <tr class="border-b">
                <td class="px-6 py-4 text-sm font-light text-gray-900 border-b border-r border-black whitespace-nowrap"><%= food.name %></td>
                <td class="px-6 py-4 text-sm font-light text-gray-900 border-b border-r border-black whitespace-nowrap">
                <%= food.measuring_unit %>
                </td>
                <td class="px-6 py-4 text-sm font-light text-gray-900 border-b border-r border-black whitespace-nowrap">
                <%= food.quantity %>
                </td>
                <td class="px-6 py-4 text-sm font-light text-gray-900 border-b border-r border-black whitespace-nowrap">
                <%= food.price %>
                </td>
                <td class="px-6 py-4 text-sm font-semibold text-red-600 border-b border-black whitespace-nowrap">
                <%= button_to "Delete", food_path(food), method: :delete, data: { confirm: "Are you sure?" } %>
                </td>
              </tr>
            </tbody>
          </table>
      </div>
  </div>
</div>
<% if action_name != "show" %>
  <div class="flex justify-end gap-20">
    <%= link_to "Show this food", food, class: "rounded-lg py-2 px-2 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this food', edit_food_path(food), class: "rounded-lg py-2  px-2 bg-gray-100 inline-block font-medium" %>
  </div>
  <% end %>
